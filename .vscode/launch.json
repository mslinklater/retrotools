    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch one.prg",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/vistella",
            "args": ["-l", "~/Code/retrotools/asm/one.prg"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch two.prg",
            "type": "cppdbg",
