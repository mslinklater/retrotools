            "program": "${workspaceFolder}/build/vistella",
            "args": ["-l", "~/Code/retrotools/asm/two.prg"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch combat.bin",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/vistella",
            "args": ["-l", "~/Code/retrotools/combaat.bin", "-a", "f000"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}